<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:id="@+id/tutorialRl"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_arrow_drop_up_white_24dp"
        android:tint="@color/LimeGreen"
        android:layout_gravity="bottom|center"
       android:scaleType="centerCrop">

    </ImageView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/LimeGreen"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close_gray_24dp"
            android:tint="@color/white"
            android:layout_alignParentEnd="true"
            android:padding="10dp"
            android:layout_centerInParent="true"
            android:id="@+id/closeTutorialImgv">

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tutorial Message !"
            android:textColor="@color/White"
            android:paddingStart="10dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:textSize="@dimen/default_size_15sp"
            android:layout_marginEnd="30dp"
            android:id="@+id/tutorialMsgTv">

        </TextView>

    </RelativeLayout>



</LinearLayout>