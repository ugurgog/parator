<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <EditText
        android:id="@+id/amountRateEt"
        android:layout_width="0dp"
        android:layout_height="@dimen/custom_edittext_height_size"
        android:layout_weight="5"
        android:hint="0"
        android:inputType="number"
        android:maxLength="10"
        android:paddingRight="5dp"
        android:textColor="@color/Black"
        android:textColorHint="@color/DarkGray"
        android:background="@drawable/custom_edittext_bg"
        android:gravity="end|center"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/custom_edittext_height_size"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp">

        <TextView
            android:layout_width="0dp"
            android:id="@+id/rateSymbolTv"
            android:layout_height="@dimen/custom_edittext_height_size"
            android:layout_weight="1"
            android:text="%"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="@dimen/custom_tv_size"
            android:textColor="@color/DodgerBlue"
            android:background="@drawable/custom_edittext_bg"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/amountSymbolTv"
            android:layout_width="0dp"
            android:layout_height="@dimen/custom_edittext_height_size"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="#"
            android:textSize="@dimen/custom_tv_size"
            android:textColor="@color/DodgerBlue"
            android:background="@drawable/custom_edittext_bg"
            android:layout_marginStart="2dp"
            android:textStyle="bold" />


    </LinearLayout>

</LinearLayout>