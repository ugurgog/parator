<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainll"
    android:background="@color/loc_bg_color">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:orientation="vertical"
            android:layout_centerInParent="true">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/ic_my_location_white_24dp">
            </ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="@color/White"
                android:textStyle="bold"
                android:paddingTop="15dp"
                android:gravity="center"
                android:id="@+id/locationReqTitleTv"
                android:textSize="@dimen/default_size_20sp">

            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/location_req_desc"
                android:textColor="@color/DarkGray"
                android:paddingTop="15dp"
                android:gravity="center"
                android:textSize="@dimen/default_size_17sp">

            </TextView>

            <Button
                android:id="@+id/btnEnableLocation"
                android:layout_width="match_parent"
                android:layout_height="@dimen/custom_button_length_size"
                android:layout_marginTop="20dp"
                android:background="@color/DodgerBlue"
                android:text="@string/enable_loc_services"
                android:textColor="@color/White"
                android:textAllCaps="false"/>

        </LinearLayout>


</RelativeLayout>