<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainrl">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/toolbar_item_update"/>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:fillViewport="true"
            android:background="@color/White">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="20dp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/icon_nfc_payment"
                    android:layout_gravity="center"
                    android:tint="@color/DarkGray">
                </ImageView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/read_card_to_refund"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:textStyle="italic">

                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="20dp"
                    android:orientation="vertical"
                    android:id="@+id/nfcInfoll">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_bg_no_click"
                        android:orientation="vertical"
                        android:id="@+id/cardInfoll">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:text="Garanti Paracard"
                            android:padding="10dp"
                            android:id="@+id/cardNameTv"
                            android:layout_weight="2"
                            android:gravity="center_vertical">

                        </TextView>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.3dp"
                            android:background="@color/Silver" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:text="**** **** **** 4444"
                            android:padding="30dp"
                            android:id="@+id/cardNumTv"
                            android:layout_weight="5"
                            android:gravity="center">

                        </TextView>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.3dp"
                            android:background="@color/Silver" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:text="UGUR GOGEBAKAN"
                            android:layout_weight="2"
                            android:id="@+id/cardUserNameTv"
                            android:padding="10dp"
                            android:gravity="center_vertical">

                        </TextView>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/type_payment_id_to_refund"
                        android:gravity="center"
                        android:paddingTop="20dp"
                        android:textStyle="italic">

                    </TextView>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center_horizontal"
                        android:paddingTop="15dp">

                        <EditText
                            android:id="@+id/referenceNumberEt"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/custom_edittext_height_size"
                            android:background="@drawable/edit_bg_no_click"
                            android:drawablePadding="20dp"
                            android:hint="@string/reference_number"
                            android:inputType="textCapSentences"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:textColor="@color/Black"
                            android:textColorHint="@color/DarkGray"
                            android:layout_weight="10"
                            tools:ignore="TextFields" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_check_white_24dp"
                            android:layout_weight="2"
                            android:tint="@color/green_color_picker"
                            android:layout_gravity="center"
                            android:id="@+id/checkImgv">

                        </ImageView>

                    </LinearLayout>




                </LinearLayout>


            </LinearLayout>


        </androidx.core.widget.NestedScrollView>





    </LinearLayout>

</RelativeLayout>

