<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="110dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_margin="2dp"
    app:cardCornerRadius="0dp"
    app:cardElevation="2dp"
    android:id="@+id/itemCv">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/custom_box_icon_bg"
            android:id="@+id/mainll">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:id="@+id/content_frame">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/itemNameTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/White"
                        android:textSize="@dimen/default_size_13sp"
                        android:gravity="center"
                        android:paddingTop="4dp"
                        android:paddingStart="2dp"
                        android:paddingEnd="2dp"
                        android:maxLines="1">

                    </TextView>

                    <TextView
                        android:id="@+id/itemValueTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/White"
                        android:textSize="@dimen/default_size_11sp"
                        android:gravity="center"
                        android:maxLines="1"
                        android:paddingBottom="2dp"
                        android:visibility="visible">

                    </TextView>

                </LinearLayout>



            </RelativeLayout>

            <ImageView
                android:id="@+id/iconImgv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:tint="@color/White"
                android:padding="3dp"
                android:layout_gravity="center"
                android:visibility="visible"
                card_view:ignore="ContentDescription">

            </ImageView>




        </LinearLayout>

        <ImageView
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:src="@drawable/ic_close_gray_24dp"
            android:tint="@color/White"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:id="@+id/deleteImgv">

        </ImageView>


    </RelativeLayout>




</androidx.cardview.widget.CardView>