<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/customerItemCv">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_margin="4dp">

            <!--include layout="@layout/layout_item_picture"
                android:layout_width="70dp"
                android:layout_height="70dp" /-->

            <TextView
                android:id="@+id/shortCustomerNameTv"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="UG"
                android:gravity="center"
                android:background="@drawable/circle_text_bg"
                android:textColor="@color/White"
                android:textStyle="bold">

            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginStart="10dp">


                <TextView
                    android:id="@+id/customerNameTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/tax_item_height_size"
                    android:text="Ugur Gogebakan"
                    android:textStyle="bold"
                    android:textColor="@color/Black"
                    android:gravity="left"
                    android:layout_weight="7"
                    android:layout_gravity="left" />


                <TextView
                    android:id="@+id/customerInfoTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/select_list_tv_size"
                    android:text="ugogebakan@hotmail.com"
                    android:textColor="@color/Gray"
                    android:gravity="start"
                    android:paddingRight="5dp"
                    android:layout_weight="5"
                    android:layout_gravity="center" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:layout_marginStart="60dp"
            android:background="@color/fab_color_shadow" />

    </LinearLayout>



</androidx.cardview.widget.CardView>