<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/saleItemCv"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    app:cardElevation="0dp"
    card_view:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_back_gray_24dp"
                android:tint="@color/Black"
                android:id="@+id/refundImgv">

            </ImageView>

            <TextView
                android:id="@+id/itemNameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="Custom Amount"
                android:textColor="@color/Black"
                android:textSize="@dimen/default_size_15sp"
                android:textStyle="bold"
                android:paddingStart="10dp">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/timell"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/itemAmountTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:maxLength="40"
                android:maxLines="1"
                android:text="12.00 TL"
                android:textColor="@color/Gray"
                android:textSize="@dimen/default_size_13sp"></TextView>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:layout_below="@id/timell"
            android:background="@color/fab_color_shadow" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>